{% extends 'ColzakAdminBundle::layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-9">
            <h2 class="clzk-admin-title">
                {% if user.username is null %}
                    Nouveaux membre
                {% else %}
                    Editer
                {% endif %}
            </h2>
        </div>
        <div class="col-md-3">
            {% if user.username is null %}
                <a href="{{ path('colzak_admin_user_delete', {'id': user.id}) }}" class="btn btn-block btn-danger">Annuler</a>
            {% else %}
                <a href="{{ path('colzak_admin_users') }}" class="btn btn-block btn-danger">Annuler</a>
            {% endif %}
        </div>
    </div>
    <hr>

    {{ form_start(form) }}
    	{{ form_rest(form) }}
    	<div class="form-group">
            <div class="col-md-3 col-md-offset-9">
                <button type="submit" class="btn btn-primary btn-block">Valider</button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}