{% extends 'ColzakHomeBundle::layout.html.twig' %}
{% block pre_header %}
    {#} Top Navbar {#}
    <div class="clzk-header-cover-container">
        <div class="container">
        </div>
    </div>
{% endblock %}
{% block header %}
    <div class="clzk-navbar-container"></div>
    <div class="navbar navbar-default clzk-navbar">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('colzak_home_homepage') }}"><img src="/img/bfc_logo.png" class="img-responsive clzk-brand-full-logo"></a>
            </div>
             <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right clzk-menu">
                    <li><a href="{{ path('colzak_blog_articles') }}">Actualités</a></li>
                    <li><a href="{{ path('colzak_users') }}">L'équipe</a></li>
                    <li><a href="{{ path('colzak_event_games') }}">Les matchs</a></li>
                    <li><a href="{{ path('colzak_home_pages', {'name': 'stats'}) }}">Les stats</a></li>
                    <li><a href="#">Multimédia</a></li>
                    <li><a href="{{ path('colzak_home_pages', {'name': 'about'}) }}">A propos</a></li>
                </ul>
             </div>
        </div>
    </div>
    <div class="clearfix"></div>
{% endblock %}
{% block body %}
    <div class="row">
        {#} Left part {#}
        <div class="col-md-8">
            <div class="clzk-last-articles-container">
                <h3>Dernières actualités</h3>
                {{ render(controller('ColzakBlogBundle:Article:lastArticles')) }}
            </div>

            <div class="clzk-index-block-container clzk-long-block">
                {#} Edito {#}
                {{ render(controller('ColzakBlogBundle:Article:lastArticles', {'category': 'edito'})) }}

                {#} Le floorball {#}
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="/img/i_love_floorball.png" class="img-responsive clzk-img-rounded">
                        </div>
                        <div class="col-md-8">
                            <h3>Le floorball, c'est quoi ?</h3>
                            <p>Brisket ham hock leberkas short loin. Hamburger short loin venison kevin jerky t-bone turkey pancetta ham ball tip meatloaf. Turkey pork chop andouille pork loin. Andouille pork belly ham hock biltong drumstick.</p>
                        </div>
                    </div>
                </div>
                {#} Le club {#}
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="/img/bdx.png" class="img-responsive clzk-img-rounded">
                        </div>
                        <div class="col-md-8">
                            <h3>Le club</h3>
                            <p>Brisket ham hock leberkas short loin. Hamburger short loin venison kevin jerky t-bone turkey pancetta ham ball tip meatloaf. Turkey pork chop andouille pork loin. Andouille pork belly ham hock biltong drumstick.</p>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                {#} Dernier résultat {#}
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="/img/team.png" class="img-responsive clzk-img-rounded">
                        </div>
                        <div class="col-md-8">
                            <h3>Dernier résultat</h3>
                            <p>Brisket ham hock leberkas short loin. Hamburger short loin venison kevin jerky t-bone turkey pancetta ham ball tip meatloaf. Turkey pork chop andouille pork loin. Andouille pork belly ham hock biltong drumstick.</p>
                        </div>
                    </div>
                </div>
                {#} Contact {#}
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="/img/contact.png" class="img-responsive clzk-img-rounded">
                        </div>
                        <div class="col-md-8">
                            <h3>Contact</h3>
                            <p>Brisket ham hock leberkas short loin. Hamburger short loin venison kevin jerky t-bone turkey pancetta ham ball tip meatloaf. Turkey pork chop andouille pork loin. Andouille pork belly ham hock biltong drumstick.</p>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        {#} right part {#}
        <div class="col-md-4">
            {#} social actions {#}
            <div class="clzk-index-block-container">
                <h3 class="text-center">Ne manque rien !</h3>
                <ul class="social-buttons cf list-unstyled">
                    <li>
                        <a href="http://twitter.com/share" class="socialite twitter-share" data-text="Les lynx de bordeaux" data-url="http://socialitejs.com" data-count="vertical" rel="nofollow" target="_blank"><span class="vhidden">Share on Twitter</span></a>
                    </li>
                    <li>
                        <a href="https://plus.google.com/share?url=http://socialitejs.com" class="socialite googleplus-one" data-size="tall" data-href="http://socialitejs.com" rel="nofollow" target="_blank"><span class="vhidden">Share on Google+</span></a>
                    </li>
                    <li>
                        <a href="http://www.facebook.com/sharer.php?u=http://www.socialitejs.com&t=Socialite.js" class="socialite facebook-like" data-href="http://socialitejs.com" data-send="false" data-layout="box_count" data-width="80" data-show-faces="false" rel="nofollow" target="_blank"><span class="vhidden">Share on Facebook</span></a>
                    </li>
                </ul>
            </div>

            {#} next game {#}
            <div class="clzk-index-block-container">
                <h3 class="text-center">Prochain match</h3>
                {{ render(controller('ColzakEventBundle:Event:nextGame')) }}
            </div>

            {#} ranking {#}
            <div class="clzk-index-block-container">
                <h3 class="text-center">Classement</h3>
                <hr>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
