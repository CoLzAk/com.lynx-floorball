                            </tr>
                            <tr>
                                <td>5</td>
                                <td>Lynx de Bordeaux</td>
                                <td>8</td>
                                <td>9</td>
                            </tr>
                            <tr>
                                <td>6</td>
                                <td>PUC 2</td>
                                <td>8</td>
                                <td>7</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
{% endblock %}

{% block extra_javascripts %}
    {% javascripts
        "js/index.js"
        "js/socialite.min.js"
    %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}