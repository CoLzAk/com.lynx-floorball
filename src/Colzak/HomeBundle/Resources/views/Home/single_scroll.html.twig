{% extends 'ColzakHomeBundle::layout.html.twig' %}
{% block extra_stylesheets %}
<style type="text/css">
.page {
    border-width: 1px 0;
    background: #f7f7f7;
    min-height: 400px;
    margin: 0;
}
.page h1 {
    margin: 0;
}
</style>
{% endblock %}
{% block pre_header %}
    {#} Top Navbar {#}
    <div class="clzk-header-cover-container">
    </div>
{% endblock %}
{% block header %}
    <div class="clzk-navbar-container"></div>
    <div class="navbar navbar-default clzk-navbar" id="clzk-navbar-unfixed">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('colzak_home_homepage') }}"><img src="/img/bfc_logo.png" class="img-responsive clzk-brand-full-logo"></a>
            </div>
             <div class="collapse navbar-collapse" id="clzk-spy-nav">
                <ul class="nav navbar-nav navbar-right clzk-menu">
                    <li class="active"><a href="#news">Actualités</a></li>
                    <li><a href="#what-is-flooball">Le floorball, c'est quoi ?</a></li>
                    <li><a href="#team">L'équipe</a></li>
                    <li><a href="#games">Les matches</a></li>
                    <li><a href="#stats">Les stats</a></li>
                    <li><a href="#media">Multimédia</a></li>
                </ul>
             </div>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="navbar navbar-default navbar-fixed-top hidden" id="clzk-navbar-fixed">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('colzak_home_homepage') }}"><img src="/img/bfc_logo_text.png" class="img-responsive clzk-brand"></a>
            </div>
             <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right clzk-menu">
                    <li><a href="#news">Actualités</a></li>
                    <li><a href="#what-is-flooball">Le floorball, c'est quoi ?</a></li>
                    <li><a href="#team">L'équipe</a></li>
                    <li><a href="#games">Les matchs</a></li>
                    <li><a href="#stats">Les stats</a></li>
                    <li><a href="#media">Multimédia</a></li>
                </ul>
             </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <!-- <div class="scrollspy-content" data-spy="scroll" data-target="#clzk-spy-nav"> -->
        <section id="news" class="page">
            <div class="clzk-home-page-title">
                <h1 class="text-center">Ce qu'il s'est passé récemment</h1>
            </div>
            <div class="container">
                <div class="clzk-last-articles-container">
                    {{ render(controller('ColzakBlogBundle:Article:lastArticles')) }}
                </div>
                <br />
                <a href="#team" class="next-page-container">
                    <div class="col-md-12 text-center">
                        <span class="glyphicon glyphicon-chevron-down"></span>
                    </div>
                </a>
            </div>
        </section>

        <section id="what-is-floorball" class="page">
            <div class="clzk-home-page-title">
                <h1 class="text-center">Le floorball, c'est quoi ?</h1>
            </div>

        </section>

        <section id="team" class="page">
            <div class="clzk-home-page-title">
                <h1 class="text-center">L'équipe</h1>
            </div>
            {{ render(controller('ColzakUserBundle:User:team')) }}
            <div class="clearfix"></div>
            <br />
            <a href="#games" class="next-page-container">
                <div class="text-center">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </div>
            </a>
        </section>

        <section id="games" class="page">
            <h1>Les matches</h1>
        </section>

        <section id="stats" class="page">
            <h1>Statistiques</h1>
        </section>

        <section id="media" class="page">
            <h1>Multimedia</h1>
        </section>
    <!-- </div> -->
{% endblock %}

{% block extra_javascripts %}
    {% javascripts
        "js/index.js"
        "js/socialite.min.js"
    %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        $(document).ready(function() {
            $('body').scrollspy();
            
            $(window).scroll(function() {
                // console.log($(window).scrollTop());

                if ($(window).scrollTop() > 400) {
                    $('#clzk-navbar-fixed').removeClass('hidden');
                    $('#clzk-navbar-unfixed').addClass('hidden');
                }

                if ($(window).scrollTop() < 400) {
                    $('#clzk-navbar-fixed').addClass('hidden');
                    $('#clzk-navbar-unfixed').removeClass('hidden');
                }
            });
        });
    </script>
{% endblock %}