<serializer>
    <class name="FOS\UserBundle\Model\User" exclusion-policy="all">  
        <property name="id" type="string" expose="true"></property>  
        <property name="username" type="string" expose="true" access-type="public_method"></property>
        <property name="email" type="string" expose="true" access-type="public_method"></property>
        <property name="enabled" type="boolean" expose="true" access-type="public_method"></property>
        <property name="salt" type="string" expose="true" access-type="reflection"></property>
        <property name="lastLogin" type="DateTime" expose="true" access-type="public_method"></property>
        <property name="roles" type="array" expose="true" access-type="public_method"></property>
    </class>
</serializer>