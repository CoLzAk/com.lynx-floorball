{% for preview in previews %}
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-4">
                <img src="{{ preview.filePath }}" class="img-responsive clzk-img-rounded">
            </div>
            <div class="col-md-8">
                {#} to translate {#}
                <h3>
                    {#{ preview.title }#}
                    {% if preview.title == 'what-is-floorball' %}
                        Le floorball c'est quoi ?
                    {% elseif preview.title == 'the-club' %}
                        Le club
                    {% endif %}
                    
                </h3>
                <p>{{ preview.description }}</p>
                <p class="text-right"><a href="{{ path('colzak_blog_pages', { name: preview.title }) }}">en savoir plus >></a></p>
            </div>
        </div>
    </div>
{% endfor %}