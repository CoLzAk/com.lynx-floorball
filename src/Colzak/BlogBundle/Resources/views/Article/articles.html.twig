{% extends 'ColzakHomeBundle::layout.html.twig' %}

{% block body %}
<div class="col-md-8">
    <div class="clzk-block-container">
        <h1 class="text-left">Dernières actualités</h1>
        {% for article in articles %}
            <h2 class="text-center">{{ article.title }}</h2>
            <div class="clzk-article-img-container">
                {% if article.filePath is not null %}
                    <img src="{{ article.filePath }}" class="img-responsive">
                {% else %}
                    {#} img par defaut {#}
                {% endif %}
            </div>
            <div class="clzk-article-content">
                    {#} date container {#}
                <div class="pull-left clzk-article-date-container col-md-3">
                    {{ article.createdAt|date('D m Y') }}
                </div>
                <p>{{ article.content }}</p>
                <div class="clearfix"></div>
            </div>
            {% if not loop.last %}<hr>{% endif %}
        {% endfor %}
    </div>
</div>
{% endblock %}