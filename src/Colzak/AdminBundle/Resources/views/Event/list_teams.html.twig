{% extends 'ColzakAdminBundle::layout.html.twig' %}

{% block pre_body %}
    <div class="col-md-3 col-md-offset-9">
        <a href="{{ path('colzak_admin_team_new') }}" class="btn btn-block btn-default">Nouvelle équipe</a>
    </div>
{% endblock %}
{% block body %}
    <h1>Liste des équipes</h1>

    {% if teams is not null %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Logo</th>
                        <th>Poule</th>
                        <th>Point</th>
                        <th>Matches joués</th>
                        <th>But marqués</th>
                        <th>But encaissés</th>
                        <th>Matches gagnés</th>
                        <th>Matches perdus</th>
                        <th>Matches nuls</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for team in teams %}

                        <tr>
                            <td>{{ team.id }}</td>
                            <td>{{ team.name }}</td>
                            <td><img src="{{ team.teamLogoPath }}" class="img-responsive"></td>
                            <td>{{ team.pool }}</td>
                            <td>{{ team.point }}</td>
                            <td>{{ team.gamePlayed }}</td>
                            <td>{{ team.goalScored }}</td>
                            <td>{{ team.goalLet }}</td>
                            <td>{{ team.win }}</td>
                            <td>{{ team.defeat }}</td>
                            <td>{{ team.draw }}</td>
                            <td><a href="{{ path('colzak_admin_team_edit', {id: team.id}) }}" class="btn btn-block btn-default">Editer</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p class="text-center">
            Aucune équipes
        </p>
    {% endif %}
{% endblock %}