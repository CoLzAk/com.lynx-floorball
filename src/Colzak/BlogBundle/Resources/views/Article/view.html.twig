{% extends 'ColzakBlogBundle::layout.html.twig' %}

{% block meta %}
    <meta name="description" content="{{ article.description }}">
{% endblock %}
{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('colzak_home_homepage') }}"><span class="glyphicon glyphicon-home"></span>&nbsp;Accueil</a></li>
        <li><a href="{{ path('colzak_blog_articles') }}">Actualit√©s</a></li>
        <li class="active">
            {{ article.url }}
        </li>
    </ol>
{% endblock %}
{% block title %}
    {{ article.title }}
{% endblock %}

{% block page_content %}
	<h2 class="text-center clzk-article-title">{{ article.title }}</h2><br>
    {% if article.filePath is not null %}
        <img src="{{ article.filePath }}" class="clzk-article-img img-responsive">
    {% else %}
        {#} img par defaut {#}
    {% endif %}
    <br />
    {{ article.content|raw }}
    <div class="clearfix"></div>
    <br>
    <p>Partager sur&nbsp;&nbsp;
        <a href="http://www.facebook.com/sharer.php?u=http://www.lynx-floorball.com{{ path('colzak_blog_article', { url: article.url }) }}&t={{ article.description }}" rel="nofollow" target="_blank"><img class="social-logo" src="/img/FB_29.png" width="20"></a>&nbsp;&nbsp;
        <a href="https://twitter.com/intent/tweet?url=http://www.lynx-floorball.com{{ path('colzak_blog_article', { url: article.url }) }}&text={{ article.title }}&hashtags=lynx,floorball" rel="nofollow" target="_blank"><img class="social-logo" src="/img/twitter.png" width="25"></a>&nbsp;&nbsp;
    </p>
    <p class="text-right"><small><i>Le {{ article.createdAt|date('d M Y') }}</i></small></p>
{% endblock %}