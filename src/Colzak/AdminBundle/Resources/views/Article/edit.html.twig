{% extends 'ColzakAdminBundle::layout.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-9">
            <h2 class="clzk-admin-title">
                {% if article.description is null %}
                    Nouvel article
                {% else %}
                    Editer
                {% endif %}
            </h2>
        </div>
        <div class="col-md-3">
            {% if article.description is null %}
                <a href="{{ path('colzak_admin_article_delete', {'id': article.id}) }}" class="btn btn-block btn-danger">Annuler</a>
            {% else %}
                <a href="{{ path('colzak_admin_articles') }}" class="btn btn-block btn-danger">Annuler</a>
            {% endif %}
        </div>
    </div>
    <hr>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        <div class="form-group">
            {{ form_label(form.description) }}
            <div class="col-md-9">
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        {{ form_row(form.category) }}
        {{ form_row(form.file) }}
        {{ form_row(form.status) }}
        <div class="clearfix"></div>
        <div class="col-md-12">
            <h4>Contenu de l'article</h4>
        </div>
        <div class="col-md-12">
            {{ form_widget(form.content) }}
        </div>
        
    	{{ form_rest(form) }}
        <br />
    	<div class="form-group">
            <div class="col-md-3 col-md-offset-9">
                <button type="submit" class="btn btn-primary btn-block">Valider</button>
            </div>
        </div>
        <div class="clearfix"></div>
    {{ form_end(form) }}
{% endblock %}