<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets
                "bootstrap/css/bootstrap.min.css"
                "css/default.css"
                "css/theme.css"
                filter="cssrewrite"
            %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
            {% endstylesheets %}
            {% block extra_stylesheets %}{% endblock %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <header class="clzk-header">
            {% block header %}
                {#} Top Navbar {#}
                <div class="clzk-header-cover-container">
                    <div class="container">
                        
                    </div>
                </div>
                <div class="navbar navbar-default clzk-navbar">
                </div>
            {% endblock %}
        </header>
        <div class="clzk-body">
            {% block pre_body %}{% endblock %}
            <div class="container">
                {% block body %}{% endblock %}
            </div>
        </div>
        <footer class="clzk-footer">
            {% block footer %}
                youhou
            {% endblock %}
        </footer>
        {% block modal %}
            <div class="modal fade" id="clzk-modal" role="dialog">
                <div class="modal-dialog container">
                    <div class="modal-content" id="clzk-modal-region">
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block javascripts %}
            {% javascripts
                "js/jquery/jquery-2.0.2.min.js"
                "js/jquery/ui-widgets/jquery.ui.widget.min.js"
                "js/jquery/jquery.ui.core.min.js"
                "bootstrap/js/bootstrap.min.js"
            %}
                <script src="{{ asset_url }}" type="text/javascript"></script>
            {% endjavascripts %}
            {% block extra_javascripts %}{% endblock %}
        {% endblock %}
    </body>
</html>
