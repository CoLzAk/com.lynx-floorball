<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Equipes</th>
                <th>J</th>
                <th>Pts</th>
            </tr>
        </thead>
        <tbody>
            {% for team in rankedTeams %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ team.name }}</td>
                    <td>{{ team.gamePlayed }}</td>
                    <td>{{ team.point }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
