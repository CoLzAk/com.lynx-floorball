{% extends 'ColzakHomeBundle::layout.html.twig' %}
{% block pre_header %}
    {#} Top Navbar {#}
    <div class="clzk-header-cover-container">
        <div class="container">
        </div>
    </div>
{% endblock %}
{% block header %}
    <div class="clzk-navbar-container"></div>
    <div class="navbar navbar-default clzk-navbar">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('colzak_home_homepage') }}"><img src="/img/bfc_logo.png" class="img-responsive clzk-brand-full-logo"></a>
            </div>
             <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right clzk-menu">
                    <li><a href="{{ path('colzak_blog_articles') }}">Actualités</a></li>
                    <li><a href="{{ path('colzak_users') }}">L'équipe</a></li>
                    <li><a href="{{ path('colzak_event_games') }}">Les matchs</a></li>
                    <li><a href="{{ path('colzak_blog_pages', {'name': 'stats'}) }}">Les stats</a></li>
                    <li><a href="{{ path('colzak_blog_media') }}">Multimédia</a></li>
                </ul>
             </div>
        </div>
    </div>
    <div class="clearfix"></div>
{% endblock %}
{% block body_left %}
    {#} Left part {#}
    <div class="col-md-8">
        <div class="clzk-last-articles-container">
            <h3>Dernières actualités</h3>
            {{ render(controller('ColzakBlogBundle:Article:lastArticles')) }}
        </div>

        <div class="clzk-block-container clzk-long-block">
            {#} Edito {#}
            {{ render(controller('ColzakBlogBundle:Article:lastArticles', {'categoryName': 'edito'})) }}

            {#} Pages {#}
            {{ render(controller('ColzakBlogBundle:Article:pagesPreview')) }}

            <div class="clearfix"></div>
        </div>
    </div>
{% endblock %}

{% block extra_javascripts %}
    {% javascripts
        "js/index.js"
        "js/socialite.min.js"
    %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}