{% extends 'ColzakAdminBundle::layout.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-9">
            <h2 class="clzk-admin-title">{{ message.subject }}</h2>
        </div>
        <div class="col-md-3">
            <a href="{{ path('colzak_admin_messages') }}" class="btn btn-block btn-primary">Retour</a>
        </div>
    </div>
    <hr>
    <p>{{ message.body }}</p>
    <p class="text-right">
    	<small>{{ message.from }}, le {{ message.createdAt|date('d/m/Y') }}</small>
    </p>
{% endblock %}