<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Lynx-Floorball | Le site officiel des Lynx{% endblock %}</title>
        {% block meta %}
            <meta name="description" content="Les Lynx vous souhaitent la bienvenue sur son site officiel. Vous y trouverez des informations sur le monde du floorball, ainsi que l'actualité des Lynx dans le championnat de 2e division.">
        {% endblock %}
        {% block stylesheets %}
            {% stylesheets
                "bootstrap/css/bootstrap.min.css"
                "css/theme.css"
                "css/default.css"
                filter="cssrewrite"
            %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
            {% endstylesheets %}
            <link href='http://fonts.googleapis.com/css?family=Architects+Daughter' rel='stylesheet' type='text/css'>
            {% block extra_stylesheets %}{% endblock %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="favicon.ico" />

        {#} Analytics {#}
        <script type="text/javascript">

            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-49599107-1']);
            _gaq.push(['_trackPageview']);

            (function() {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();

        </script>
    </head>
    <body>
        <div class="clzk-global-page-wrapper">
            <header class="clzk-header">
                {% block pre_header %}{% endblock %}
                {% block header %}
                    <div class="navbar navbar-default">
                        <div class="container">
                            <div class="navbar-header">
                                <a class="navbar-brand" href="{{ path('colzak_home_homepage') }}"><img src="/img/lynx-floorball-full-text-logo.png" class="img-responsive clzk-brand"></a>
                            </div>
                             <div class="collapse navbar-collapse">
                                <ul class="nav navbar-nav navbar-right clzk-menu">
                                    <li><a href="{{ path('colzak_blog_articles') }}">Actualités</a></li>
                                    <li><a href="{{ path('colzak_users') }}">L'équipe</a></li>
                                    <li><a href="{{ path('colzak_event_games') }}">Les matchs</a></li>
                                    <li><a href="{{ path('colzak_blog_media') }}">Multimédia</a></li>
                                </ul>
                             </div>
                        </div>
                    </div>
                {% endblock %}
            </header>
            <div class="clzk-body">
                <div id="fb-root"></div>
                <div class="container"><div class="clzk-container">
                    {% block body %}
                        <div class="row">

                            {% block body_left %}{% endblock %}

                            {% block body_right %}
                                {#} right part {#}
                                <div class="col-md-4">
                                    {% block breadcrumb %}{% endblock %}

                                    {#} next game {#}
                                    <div class="clzk-block-container">
                                        <h3 class="text-center">Prochain match</h3>
                                        {{ render(controller('ColzakEventBundle:Event:nextGame')) }}
                                    </div>

                                    {#} social actions {#}
                                    <div class="clzk-block-container">
                                        <!-- <h3 class="text-center">Ne manque rien !</h3> -->

                                        <div class="text-center">
                                            <div class="col-md-3">
                                                <div class="g-plusone" data-size="medium" data-href="http://www.lynx-floorball.com"></div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="fb-like" data-href="https://www.facebook.com/FloorballBordeaux" data-width="200" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div>
                                            </div>
                                            <div class="col-md-5">
                                                <div class="clzk-twitter-follow-btn">
                                                    <a href="https://twitter.com/LynxBordeaux" class="twitter-follow-button" data-show-count="true" data-lang="fr" data-show-screen-name="false" data-align="top"></a>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>

                                    {#} ranking {#}
                                    <div class="clzk-block-container">
                                        <h3 class="text-center">Classement</h3>
                                        {{ render(controller('ColzakEventBundle:Event:ranking')) }}
                                    </div>
                                    <div class="clzk-block-container">
                                        <h3 class="text-center">Contact</h3>
                                        <p>Tu veux avoir des renseignements ? N'hésite pas à nous contacter via le site. Nous te répondrons dès que possible !</p>
                                        <a href="{{ path('colzak_home_contact') }}" class="btn btn-secondary btn-block">Contacter</a>
                                    </div>
                                </div>
                            {% endblock %}
                            <div class="clearfix"></div>
                        </div>
                    {% endblock %}
                </div></div>
            </div>
        </div>
        <footer class="clzk-footer">
            <div class="container">
                {% block footer %}
                    <div class="navbar navbar-default" role="navigation">
                        <div class="container">
                            <p class="text-center clzk-footer-text">Copyright © 2014 - CoLzAk</p>
                            <ul class="nav nav-pills clzk-footer-text col-md-7 col-md-offset-3">
                                <li><a href="{{ path('colzak_blog_articles') }}">Actualités</a></li>
                                <li><a href="{{ path('colzak_users') }}">L'équipe</a></li>
                                <li><a href="{{ path('colzak_event_games') }}">Les matches</a></li>
                                <li><a href="{{ path('colzak_blog_media') }}">Multimédia</a></li>
                                <li><a href="{{ path('colzak_home_contact') }}">Contact</a></li>
                                <li class="disabled"><a href="#">A propos</a></li>
                            </ul>
                        </div>
                    </div>
                {% endblock %}
            </div>
        </footer>
        {% block modal %}
            <div class="modal fade" id="clzk-modal" role="dialog">
                <div class="modal-dialog container">
                    <div class="modal-content" id="clzk-modal-region">
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block javascripts %}
            {% javascripts
                "js/jquery/jquery-2.0.2.min.js"
                "js/jquery/ui-widgets/jquery.ui.widget.min.js"
                "js/jquery/jquery.ui.core.min.js"
                "bootstrap/js/bootstrap.min.js"
            %}
                <script src="{{ asset_url }}" type="text/javascript"></script>
            {% endjavascripts %}
            {#} google plus {#}
            <script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>
            {#} facebook {#}
            <script>(function(d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) return;
                js = d.createElement(s); js.id = id;
                js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1";
                fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));</script>
            {#} twitter {#}
            <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
            {% block extra_javascripts %}{% endblock %}
        {% endblock %}
    </body>
</html>
